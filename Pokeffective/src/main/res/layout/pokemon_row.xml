<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/imgViewPokemonPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/txtViewPokedexNumber"
        android:textColor="@android:color/white"
        android:text="10"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imgViewPokemonPicture"
        android:layout_toLeftOf="@id/txtViewPokedexNumber">
        <TextView
            android:id="@+id/txtViewPokemonName"
            android:text="Charizard"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/txtViewPokemonTypes"
            android:text="Fire / Flying"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
    </LinearLayout>

</RelativeLayout>