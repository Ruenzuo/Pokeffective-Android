<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtViewDeveloper"
        android:text="PokéApp by Renzo Crisóstomo @Ruenzuo"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Contact: renzo.crisostomo@me.com"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:autoLink="email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtViewOpenSource"
        android:text="PokéApp for Android is built using open source software: license."
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtViewEevee"
        android:text="Special thanks to Eevee for his amazing work, you're the best!"
        android:textSize="16sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>